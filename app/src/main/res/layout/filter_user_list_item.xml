<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxWidth="240dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/maru_list_item_thumb"
            android:layout_toStartOf="@+id/maru_list_item_thumb">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nickname"
                android:id="@+id/maru_list_item_title"
                android:textAppearance="@style/List.TitleText"
                android:maxLines="1"
                android:paddingLeft="8dp"
                android:paddingRight="6dp"/>

        <ImageView
                android:id="@+id/filter_user_list_item_userType"
                android:src="@drawable/flow"
                android:tint="@color/colorAccentYellow"
                android:layout_width="14dp"
                android:layout_height="14dp"/>
    </LinearLayout>


    <ImageView android:layout_width="24dp"
               android:layout_height="24dp"
               android:layout_alignParentTop="true"
               android:padding="1dp"
               android:layout_gravity="center_vertical"
               android:id="@+id/maru_list_item_thumb"
               android:src="@drawable/delete_button"
               android:tint="@color/colorGray"
               android:layout_alignParentEnd="true"/>
</RelativeLayout>

