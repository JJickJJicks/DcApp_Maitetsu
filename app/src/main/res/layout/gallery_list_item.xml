<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="5dp">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="galleryName"
            android:id="@+id/maru_list_item_title"
            android:textAppearance="@style/List.NotifyText"
            android:maxLines="1"
            android:maxWidth="240dp"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/maru_list_item_thumb"
            android:layout_toStartOf="@+id/maru_list_item_thumb"/>

    <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="1dp"
            android:tint="?android:attr/textColorSecondary"
            android:layout_gravity="center_vertical"
            android:id="@+id/maru_list_item_thumb"
            android:layout_alignParentTop="true"
            android:src="@drawable/delete_button"
            android:layout_alignParentEnd="true"/>

</RelativeLayout>

